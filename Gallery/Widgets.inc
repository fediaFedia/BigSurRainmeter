[CheckUpdate]
Measure=WebParser
URL=http://fediafedia.com/bigsur/up.dt
RegExp="<update>(.*)</update>.*<link>(.*)</link>"
FinishAction=[!Update]
UpdateDivider=1000

[UpdateAvailable]
Measure=WebParser
URL=[CheckUpdate]
StringIndex=1
IfMatch=1
IfMatchAction=[!ShowMeter Update][!Update]
DynamicVariables=1

[UpdateLink]
Measure=WebParser
URL=[CheckUpdate]
StringIndex=2


[Update]
Meter=String
w=(405)*#scaledpi#
h=(35)*#scaledpi#
x=(427)*#scaledpi#
y=20
solidcolor=0,120,0

Text=#UpdateAvailable#
